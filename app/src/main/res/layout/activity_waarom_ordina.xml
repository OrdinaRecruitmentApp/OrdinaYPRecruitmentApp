<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nl.ordina.yp.recruitmentapp.new_test_activity"
    android:nestedScrollingEnabled="true"
    android:background="#ffe98300">

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center" >

        <Button
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/yp_vacatures"
            android:id="@+id/button_vacatures2"
            android:onClick="goToVacatures"
            android:background="#565A5C"
            android:textColor="#FFFFFF"
            android:minWidth="280dp"
            android:fontFamily="Arial"
            android:layout_centerVertical="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView66"
            android:layout_below="@+id/button_vacatures2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000"
            android:layout_weight="0.35" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollableContents"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/footer"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="3dp"
        android:minHeight="800dp"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="ALWIN TAN - JUNIOR TECHNICAL CONSULTANT "
            android:id="@+id/textView34"
            android:layout_below="@+id/tableRow"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="12dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.00">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView4"
                android:layout_below="@+id/tableRow"
                android:layout_toRightOf="@+id/tableRow"
                android:src="@drawable/alwintan" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="158dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="&quot;Ik heb Bewegingswetenschappen gestudeerd aan de Vrije Universiteit in Amsterdam. Na mijn studie was het moeilijk om een baan te vinden in die sector. Ik heb besloten om mij open te stellen voor alle mogelijkheden. Tijdens een bezoek op de carrièrebeurs kwam ik bij de stand van Ordina terecht. Ik had het gevoel dat Ordina openstond voor mensen die een start willen maken in de IT-wereld, waarbij een IT-opleiding geen must was. Die instelling en de mogelijkheden om jezelf te ontwikkelen, waren voor mij belangrijke argumenten om bij Ordina een start te maken in de IT-wereld.&quot;"
                android:id="@+id/textView33"
                android:textSize="10dp"
                android:layout_below="@+id/textView34"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/imageView4"
                android:paddingStart="5dp"
                android:textColor="#ffffffff" />
        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="MARK MULDER - JUNIOR TECHNICAL CONSULTANT "
            android:id="@+id/textView35"
            android:textSize="12dp"
            android:layout_below="@+id/textView33"
            android:layout_toRightOf="@+id/tableRow"
            android:layout_marginTop="25dp"
            android:layout_toLeftOf="@+id/imageView3"
            android:layout_toStartOf="@+id/imageView3" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="240dp"
                android:layout_height="60dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="“Ordina geeft mij het gevoel dat ik verder kan groeien en mag ontdekken waar ik nog meer goed in ben. Naast dit gevoel voel ik ook de warme en open sfeer binnen het bedrijf. Daarom heb ik voor Ordina gekozen.”"
                android:id="@+id/textView36"
                android:textSize="10dp"
                android:textColor="#ffffffff"
                android:layout_weight="0.38" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView3"
                android:src="@drawable/markmulder"
                android:layout_alignTop="@+id/textView35"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="MARK DE MUNNIK – JUNIOR TECHNICAL CONSULTANT "
            android:id="@+id/textView37"
            android:textSize="12dp"
            android:paddingStart="5dp"
            android:layout_below="@+id/tableRow2"
            android:layout_alignRight="@+id/imageView3"
            android:layout_alignEnd="@+id/imageView3"
            android:layout_marginTop="25dp"
            android:layout_weight="0.08" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView5"
                android:src="@drawable/markdemunnink"
                android:layout_alignTop="@+id/textView37"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="104dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="“De sfeer binnen Ordina zou ik typeren als warm, informeel en relaxed. Je krijgt als Young Professional veel ruimte om jezelf te ontwikkelen. Dankzij het uitgebreide opleidingsprogramma kun je in korte tijd enorm veel leren. Door de goede mix van deze factoren heb ik gekozen voor Ordina.”"
                android:id="@+id/textView38"
                android:textSize="10dp"
                android:paddingStart="5dp"
                android:layout_below="@+id/textView37"
                android:layout_toEndOf="@+id/imageView5"
                android:layout_alignLeft="@+id/textView37"
                android:layout_alignStart="@+id/textView37"
                android:textColor="#ffffffff" />
        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="JALAL MEKMASSI– JUNIOR TECHNICAL CONSULTANT "
            android:id="@+id/textView39"
            android:layout_alignTop="@+id/imageView6"
            android:layout_toRightOf="@+id/tableRow"
            android:layout_toLeftOf="@+id/imageView6"
            android:layout_toStartOf="@+id/imageView6"
            android:textSize="12dp"
            android:layout_weight="0.00" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="vertical"
            android:id="@+id/tableRow">

            <TextView
                android:layout_width="246dp"
                android:layout_height="114dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="&quot;Ordina is een warm bedrijf en er heerst een ontspannen sfeer. Het is voor Young Professionals, naast een uitgebreid opleidingsprogramma, erg belangrijk mensen kunnen ontmoeten en ideeën uit te wisselen. Dit wordt volledig ondersteund door Ordina en is daarom een leuk bedrijf om voor te mogen werken.&quot;"
                android:id="@+id/textView40"
                android:layout_below="@+id/textView39"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/imageView6"
                android:layout_toStartOf="@+id/imageView6"
                android:textSize="10dp"
                android:textColor="#ffffffff" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView8"
                android:src="@drawable/jalalmekmassi" />

        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="SABRINA WILBRINK-PODESTA– JUNIOR TECHNICAL CONSULTANT "
            android:id="@+id/textView41"
            android:textSize="12dp"
            android:layout_weight="0.15" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_weight="0.24">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView7"
                android:src="@mipmap/sabrina"
                android:layout_weight="0.03" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="119dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="“Met een achtergrond als Dierwetenschapper en meerdere jaren ervaring als onderzoeker en kwaliteitsmanager, lijkt Ordina misschien niet direct een logische vervolgstap. Ik was echter op zoek naar een baan met uitdaging, afwisseling, dynamiek en gave projecten waarbij je echt iets kunt betekenen voor bedrijven en voor de mens. En dat is precies wat ik bij Ordina gevonden heb. Bovendien sprak de sfeer me direct aan; informeel, creatief en enthousiast.”"
                android:id="@+id/textView43"
                android:textSize="10dp"
                android:textColor="#ffffffff" />

        </TableRow>

    </LinearLayout>
</ScrollView>
</RelativeLayout>



