<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nl.ordina.yp.recruitmentapp.new_test_activity"
    android:nestedScrollingEnabled="true"
    android:background="#ffe98300">



    <ScrollView
        android:id="@+id/scrollableContents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="3dp"
        android:minHeight="800dp"
        android:weightSum="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_alwin_tan"
            android:id="@+id/textView34"
            android:textSize="12dp"
            android:layout_marginBottom="3dp"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView4"
                android:src="@drawable/alwintan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_alwin_tan"
                android:id="@+id/textView33"
                android:textSize="11sp"
                android:textColor="#ffffffff"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_mark_mulder"
            android:id="@+id/textView35"
            android:textSize="12sp"

             />
        <!--android:layout_below="@+id/textView33"-->
        <!--android:layout_toRightOf="@+id/tableRow"-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_mark_mulder"
                android:id="@+id/textView36"
                android:textSize="11sp"
                android:textColor="#ffffffff"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView3"
                android:src="@drawable/markmulder"


                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_mark_de_munnik"
            android:id="@+id/textView37"
            android:textSize="12dp"

             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView5"
                android:src="@drawable/markdemunnink"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_mark_de_munnik"
                android:id="@+id/textView38"
                android:textSize="11dp"
                android:textColor="#ffffffff"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_jalal_mekmassi"
            android:id="@+id/textView39"

            android:textSize="12dp"
             />

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_jalal_mekmassi"
                android:id="@+id/textView40"
                android:textSize="11sp"
                android:layout_weight="1"
                android:textColor="#ffffffff"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"/>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView8"
                android:src="@drawable/jalalmekmassi" />

       </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/title_sabrina_wilbrink_podesta"
            android:id="@+id/textView41"
            android:textSize="12sp"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageView7"
                android:src="@mipmap/sabrina"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_sabrina_wilbrink_podesta"
                android:id="@+id/textView43"
                android:textSize="11sp"
                android:textColor="#ffffffff"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"/>

        </LinearLayout>


    </LinearLayout>
</ScrollView>

    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center" >

        <Button
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/yp_vacatures"
            android:id="@+id/button_vacatures2"
            android:onClick="goToVacatures"
            android:background="#565A5C"
            android:textColor="#FFFFFF"
            android:minWidth="280dp"
            android:fontFamily="Arial"
            android:layout_centerVertical="true" />


    </RelativeLayout>
</RelativeLayout>



