<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="nl.ordina.yp.ordinarecruitmentapp.watdoetordina.KlantenActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"

    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/klanten_activity_text"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:paddingLeft="@dimen/abc_dropdownitem_text_padding_left"
        android:paddingRight="@dimen/abc_dropdownitem_text_padding_right"
        android:paddingTop="5dp"
        android:paddingBottom="5dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="#FFFFFF"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/klanten_row_1"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:src="@drawable/prorail_128x128"
                    android:maxHeight="25px"
                    android:id="@+id/prorail"
                    android:onClick="showProjectDialog"
                    android:clickable="true" />

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:src="@drawable/politie_128x128"
                    android:maxHeight="25px"
                    android:id="@+id/politie"
                    android:onClick="showProjectDialog"
                    android:clickable="true" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/klanten_row_2"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:src="@drawable/eneco_128x128"
                    android:maxHeight="25px"
                    android:id="@+id/eneco"
                    android:onClick="showProjectDialog"
                    android:clickable="true" />

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ministerie_van_defensie128x"
                    android:maxHeight="25px"
                    android:id="@+id/mindef"
                    android:onClick="showProjectDialog"
                    android:clickable="true" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/klanten_row_3"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:src="@drawable/bavaria_128x128"
                    android:maxHeight="25px"
                    android:id="@+id/bavaria"
                    android:onClick="showProjectDialog"
                    android:clickable="true" />

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:src="@drawable/universiteit_utrecht_128x128"
                    android:maxHeight="25px"
                    android:id="@+id/uniu"
                    android:onClick="showProjectDialog"
                    android:clickable="true" />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
