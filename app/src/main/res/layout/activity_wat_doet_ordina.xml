<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="nl.ordina.yp.recruitmentapp.WatDoetOrdinaActivity"
    android:background="@drawable/claim_jouw_plek_running_man_480_800">




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_afdelingen"
        android:id="@+id/button_afdelingen"
        android:onClick="startAfdelingenActivity"
        android:background="@drawable/button_ordina_orange"
        android:minWidth="280dp"
        android:textColor="#ffffff"
        android:fontFamily="Arial"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button_klanten"
        android:layout_alignStart="@+id/button_klanten"
        android:layout_marginTop="200dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_klanten"
        android:id="@+id/button_klanten"
        android:layout_marginTop="20dp"
        android:onClick="startKlantenActivity"
        android:layout_below="@+id/button_afdelingen"
        android:layout_centerHorizontal="true"
        android:minWidth="280dp"
        android:fontFamily="Arial"
        android:background="@drawable/button_ordina_orange"
        android:textColor="#FFFFFF"/>



</RelativeLayout>
