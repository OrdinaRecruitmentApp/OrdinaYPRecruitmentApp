<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="yp.ordina.nl.nl.ordina.yp.ordinarecruitmentapp..yp.ordina.nl.ordinareqruitmentapp.watdoetordina.ProjectenActivity"
                android:background="#ffffff"
                >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:src="@drawable/prorail"/>

        <TextView
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:text="@string/text_projecten_prorail"
            android:textColor="#000000"/>

        <ImageView
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:src="@drawable/politie"/>

        <TextView
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:text="@string/text_projecten_politie"
            android:textColor="#000000"/>

        <ImageView
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:src="@drawable/youforce"/>

        <TextView
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:text="@string/text_projecten_politie"
            android:textColor="#000000"/>


    </LinearLayout>
</ScrollView>
