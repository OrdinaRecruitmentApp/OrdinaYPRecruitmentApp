<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/layout">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="waarom Ordina?"
        android:id="@+id/button_waarom_ordina"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="147dp"
        android:onClick="startWaaromOrdinaActivity"
        android:background="#E98300" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wat Doet Ordina?"
        android:id="@+id/button_wat_doet_ordina"
        android:layout_marginTop="51dp"
        android:onClick="startWatDoetOrdinaActivity"
        android:background="#E98300"
        android:layout_below="@+id/button_waarom_ordina"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Young Professional Programma"
        android:id="@+id/button_young_professional_programma"
        android:layout_marginTop="51dp"
        android:onClick="startYoungProfessionalProgramma"
        android:background="#E98300"
        android:layout_below="@+id/button_wat_doet_ordina"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
