<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/layout"
    android:background="@drawable/claim_jouw_plek_480_800">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/young_professionals"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF" android:textSize="30dp" android:fontFamily="Arial"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waarom_ordina_kiezen"
        android:id="@+id/button_waarom_ordina"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:onClick="startWaaromOrdinaActivity"
        android:background="#565A5C"
        android:textColor="#FFFFFF"
        android:minWidth="280dp" android:fontFamily="Arial"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wat_doet_ordina"
        android:id="@+id/button_wat_doet_ordina"
        android:layout_marginTop="20dp"
        android:onClick="startWatDoetOrdinaActivity"
        android:background="#565A5C"
        android:layout_below="@+id/button_waarom_ordina"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:minWidth="280dp"
        android:fontFamily="Arial"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/young_professional_programma"
        android:id="@+id/button_young_professional_programma"
        android:layout_marginTop="20dp"
        android:onClick="startYoungProfessionalProgramma"
        android:background="#565A5C"
        android:layout_below="@+id/button_wat_doet_ordina"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:minWidth="280dp" android:fontFamily="Arial"/>


</RelativeLayout>
